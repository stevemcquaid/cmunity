<%= form_for @group, :url => group_message_path, :html => { :class => 'form-horizontal' } do |f| %>
  <% @group.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.select :users_to_message, options_for_select(@group.users.collect {|u| [ u.name, u.id ] }), {}, {:multiple => true} %>
    </div>
  </div>
	
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :message, :class => 'text_field', :placeholder => "Hi, just a reminder for our meeting on Wednesday...", :size => "20x3" %>
    </div>
  </div>
	
	<div><%= f.hidden_field :id, value: @group.id %></div>
	
  <div class="form-actions">
    <%= f.submit "Send Messages", :class => 'btn btn-primary' %>
  </div>
<% end %>