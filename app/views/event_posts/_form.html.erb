<%= form_for @event_post, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.fields_for :content do |builder|%>
    <div class="control-group">
      <div class="controls">
        <input type="text" placeholder="Title">
      </div>
    </div>
  <% end -%>
  <div class="control-group">
    <div class="controls">
      <input type="text" placeholder="Location">
    </div>
  </div>
  <div class="control-group">
    
    <div class="controls">
      <textarea rows="3" placeholder="Description"></textarea>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start_datetime, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :end_datetime, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_all_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_all_day, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-info' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                event_posts_path, :class => 'btn' %>
  </div>
<% end %>
