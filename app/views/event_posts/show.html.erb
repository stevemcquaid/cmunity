<%- model_class = EventPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @event_post.content.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @event_post.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event_post.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_datetime) %>:</strong></dt>
  <dd><%= @event_post.start_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_datetime) %>:</strong></dt>
  <dd><%= @event_post.end_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_all_day) %>:</strong></dt>
  <dd><%= @event_post.is_all_day %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              event_posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_post_path(@event_post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_post_path(@event_post),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
