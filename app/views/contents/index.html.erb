<%- model_class = Content -%>
<div class="page-header">
  <h1>Posts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Group</th>
      <th>Privacy</th>
      <th><%=t '.actions', :default => t("helpers.actions") if user_signed_in? %></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= link_to content.title, post_path(content) %></td>
        <td><%= content.creator.name unless content.creator.nil? %></td>
        <td><%= content.group.name unless content.group.nil? %></td>
        <td><%= content.is_private ? "Private" : "Public" %></td>
        <% if current_user == content.creator %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(content), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), posts_path(content), :method => :delete,  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @contents, :renderer => BootstrapPagination::Rails %>

<% if user_signed_in? %>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary' %>
	<br/>
<% end %>
