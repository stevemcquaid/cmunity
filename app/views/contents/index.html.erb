<%- model_class = Content -%>
<div class="page-header">
  <h1>Posts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:creator_id) %></th>
      <th><%= model_class.human_attribute_name(:parent_group_id) %></th>
      <th>Privacy</th>
      <th><%=t '.actions', :default => t("helpers.actions") if user_signed_in? %></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= link_to content.title, content_path(content) %></td>
        <td><%= content.creator.name unless content.creator.nil? %></td>
        <td><%= content.group.name unless content.group.nil? %></td>
        <td><%= content.is_private ? "Private" : "Public" %></td>
        <% if current_user == content.creator %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_content_path(content), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      content_path(content),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_content_path,
              :class => 'btn btn-primary' %>
<% end %>
