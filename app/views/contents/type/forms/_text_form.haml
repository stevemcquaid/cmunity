= simple_form_for([@content, @text], :html => {:class => 'form-horizontal'}) do |t| 
  = t.error_notification

  .form-inputs
    = t.simple_fields_for :content do |c|
      = c.input :title
      = c.input :is_private
      - if !current_user.groups.empty?
        %span Post As:
        = c.input :parent_group_id, collection: current_user.groups, label_method: :name, value_method: :id

    = t.input :text, as: :text

  .form-actions
    = t.button :submit, :class => 'btn btn-primary'