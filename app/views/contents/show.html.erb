<%- model_class = Content -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @content.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creator_id) %>:</strong></dt>
  <dd><%= @content.creator_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_group_id) %>:</strong></dt>
  <dd><%= @content.parent_group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_private) %>:</strong></dt>
  <dd><%= @content.is_private ? "Private" : "Public" %></dd>

  <% 
    type = @content.mediable_type.clone
    type.slice! "Post"
  %>
  <dt><strong>Type:</strong></dt>
  <dd><%= type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contents_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_path(@content), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_path(@content),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

<% if @content.mediable_type == "TextPost" %>
  <%= render :partial => 'text_post_display', :locals => { :text => @content.mediable } %>
<% elsif @content.mediable_type == "UrlPost" %>
  <%= render :partial => 'url_post_display', :locals => { :url => @content.mediable }  %>
<% elsif @content.mediable_type == "VideoPost" %>
  <%= render :partial => 'video_post_display', :locals => { :video => @content.mediable }  %>
<% elsif @content.mediable_type == "ImagePost" %>
  <%= render :partial => 'image_post_display', :locals => { :image => @content.mediable }  %>
<% elsif @content.mediable_type == "EventPost" %>
  <%= render :partial => 'event_post_display', :locals => { :event => @content.mediable }  %>
<% end %>