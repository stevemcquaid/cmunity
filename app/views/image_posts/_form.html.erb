<%= form_for @image_post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :content_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :content_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :x_pixels, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :x_pixels, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :y_pixels, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :y_pixels, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                image_posts_path, :class => 'btn' %>
  </div>
<% end %>
