<%= form_for @url_post, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.fields_for :content do |builder|%>
    <div class="control-group">
      <div class="controls">
        <%= builder.hidden_field :title, :class => 'title_field' %>
        <%= builder.hidden_field :description, :class => 'desc_field' %>
      </div>
    </div>
  <% end -%>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field', :id => 'urlfield' %>
    </div>
  </div>

  <%= f.hidden_field :domain_url, :class => "domain_field" %>
  <%= f.hidden_field :image_url, :class => "image_field" %>

  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-info' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                url_posts_path, :class => 'btn' %>
  </div>
<% end %>

<div class="liveurl-loader"></div>
        
        <div class="liveurl">
            <div class="close" title="Close"></div>
            <div class="inner">
                <div class="image"> </div>
                <div class="detls">
                    <div class="info">
                        <div class="title editable"> </div>
                        <div class="description editable"> </div> 
                        <div class="url"> </div>
                    </div>

                    <div class="thumbnail">
                        <div class="pictures">
                            <div class="controls">
                                <div class="prev button inactive"></div>
                                <div class="next button inactive"></div>
                                <div class="count">
                                    Showing <span class="current">0</span><span> out of </span><span class="max">0</span> photos
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="video"></div>
                </div>

            </div>
        </div>

