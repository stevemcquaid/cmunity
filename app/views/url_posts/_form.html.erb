<%= form_for @url_post, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.fields_for :content do |builder|%>
    <div class="control-group">
      <%= builder.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= builder.text_field :title, :class => 'text_field' %>
      </div>
    </div>
  <% end -%>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                url_posts_path, :class => 'btn' %>
  </div>
<% end %>
